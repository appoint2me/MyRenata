<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8931f"
    tools:context="com.example.a2mee.myrenata.com.net.activety.Quaraqntine_srore">

    <RelativeLayout
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#feffffff">

        <ImageView
            android:id="@+id/imv1ddf"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/qtyy"
            android:foregroundGravity="center" />

        <TextView
            android:id="@+id/cvvcddv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imv1ddf"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="	Quarantine Store"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/qaeee"
            android:layout_width="300dp"
            android:layout_height="50sp"
            android:layout_below="@+id/cvvcddv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#0f7eb6"
            android:text="Scan"
            android:textColor="#a4f9f5f5"
            android:textSize="30sp" />

        <TextView
            android:textAlignment="center"
            android:background="#a2f4e7e7"
            android:id="@+id/qtrrr"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/qaeee"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:hint="Barcode data"
            android:textColor="#f11b1b1b"
            android:textSize="15dp" />


        <RelativeLayout
            android:textColor="#dff7f4f4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qtrrr"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp">

            <TextView
                android:textColor="#f7f4f4"
                android:id="@+id/qtyy"
                android:layout_width="150dp"
                android:layout_height="40sp"
                android:layout_marginLeft="20dp"
                android:background="#544740"
                android:text="Qty"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/qtyyd"
                android:layout_width="150dp"
                android:layout_height="40sp"
                android:layout_alignLeft="@+id/acceoops"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/acceoops"
                android:background="#a2f4e7e7"
                android:textColor="#414040"
                android:textSize="16dp" />

            <TextView
                android:textColor="#f7f4f4"
                android:id="@+id/acceoop"
                android:layout_width="150dp"
                android:layout_height="40sp"
                android:layout_below="@+id/qtyy"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="#0f7eb6"
                android:text="Accept"
                android:textAlignment="center"
                android:textSize="15dp" />

            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/acceoops"
                android:layout_width="150dp"
                android:layout_height="40sp"
                android:layout_below="@+id/qtyy"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="5dp"
                android:background="#a2f4e7e7"
                android:textColor="#000"
                android:textSize="16dp" />


            <TextView
                android:textColor="#f7f4f4"
                android:id="@+id/Rejection1faa"
                android:layout_width="150dp"
                android:layout_height="40sp"
                android:layout_below="@+id/acceoop"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="#666666"
                android:text="Rejection Reason"
                android:textAlignment="center"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/Rejectionfss"
                android:layout_width="150dp"
                android:layout_height="40sp"
                android:layout_alignLeft="@+id/Rejectfdd"
                android:layout_alignStart="@+id/Rejectfdd"
                android:layout_alignTop="@+id/Rejection1faa"
                android:background="#a2f4e7e7"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:textColor="#f7f4f4"
                android:id="@+id/Reject1fqccc"
                android:layout_width="150dp"
                android:layout_height="40sp"
                android:layout_below="@+id/Rejectionfss"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="#ee1c25"
                android:text="Rejected "
                android:textAlignment="center"
                android:textSize="15dp" />

            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/Rejectfdd"
                android:layout_width="150dp"
                android:layout_height="40sp"
                android:layout_below="@+id/Rejection1faa"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="5dp"
                android:background="#a2f4e7e7"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/oprater1f"
                android:layout_width="150dp"
                android:layout_height="40sp"
                android:layout_above="@+id/opsavef"
                android:layout_alignLeft="@+id/Reject1fqccc"
                android:layout_alignStart="@+id/Reject1fqccc"
                android:background="#8cc63e"
                android:text="operator id"
                android:textAlignment="center"
                android:textColor="#f7f4f4"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/opraterfd"
                android:layout_width="150dp"
                android:layout_height="40sp"
                android:layout_below="@+id/Reject1fqccc"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="5dp"
                android:background="#a2f4e7e7"
                android:textColor="#1d1c1c"
                android:textSize="16dp" />

            <Button
                android:textColor="#f7f4f4"
                android:id="@+id/opsavef"
                android:layout_width="150dp"
                android:layout_height="40sp"
                android:layout_below="@+id/opraterfd"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="#8cc63e"
                android:text="Save"
                android:textAlignment="center"
                android:textSize="16dp" />

            <Button
                android:textColor="#f7f4f4"
                android:id="@+id/osaveaaa"
                android:layout_width="150dp"
                android:layout_height="40sp"
                android:layout_below="@+id/opraterfd"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="15dp"
                android:background="#0f7eb6"
                android:text="Save Another"
                android:textSize="16dp" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
