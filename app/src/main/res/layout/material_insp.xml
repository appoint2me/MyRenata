<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8931f"
    tools:context="com.example.a2mee.myrenata.com.net.activety.material_inspActivity"
    android:orientation="horizontal">
    <RelativeLayout
        android:background="#f2eeee"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imvf"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:background="@drawable/sendlogo"
            android:foregroundGravity="center" />

        <TextView
            android:layout_below="@+id/imvf"
            android:id="@+id/nameonlineinsp"
            android:text="Send to FG"
            android:textSize="26dp"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/butscanonline"
            android:text="Scan"
            android:textSize="30sp"
            android:textColor="#a4f9f5f5"
            android:background="#0f7eb6"
            android:layout_width="260dp"
            android:layout_height="60sp"
            android:layout_below="@+id/nameonlineinsp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp" />
        <TextView
            android:textAlignment="center"
            android:id="@+id/barcodedataa"
            android:layout_below="@+id/butscanonline"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="Barcode data"
            android:textSize="15dp"
            android:textColor="#b1101010"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="28dp"
            android:layout_below="@+id/barcodedataa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/Submithhh"
                android:layout_width="300dp"
                android:layout_height="50sp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="30dp"
                android:background="#3ab54a"
                android:text="Save"
                android:textSize="20dp" />





        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
